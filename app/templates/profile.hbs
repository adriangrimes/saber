    <br>
      <!--- Video and Chat Panels --->
  <div class="row m-0" style="padding-bottom:20px;">
        <!--Video Window -->
        <div class="col-xs-12 col-sm-8 no-padding"  id="videoWindow">
          <div class="panel panel-default video-panel">
            <div class="profile-controls">
              {{#if session.isAuthenticated}}
                <a  id="edit-links" role="button" data-toggle="modal" data-target="#editPhotosModal" style="top:70px">
                  <span title="Edit Avatar" class="fa fa-edit" ></span>
                </a>
              {{else}}
                  {{#if isFavorite}}

                  <button type="button" class="btn btn-link"> <span  title="Remove From Favorites" class=" profile-links fa fa-heart"{{action "toggleFav"}}></span></button>
                  {{else}}

                  <button type="button" class="btn btn-link">  <span  title="Add to Favorites" class=" profile-links fa fa-heart-o" {{action "toggleFav"}}></span></button>
                  {{/if}}

                  <button type="button" class="btn btn-link">  <span title="Send Message" class=" profile-links fa fa-envelope" ></span></button>
                  <div class="input-group col-xs-4 col-sm-4" id="simple-tip-form" >
                     <span class="input-group-prepend button-group">
                        <label class="btn btn-secondary">
                          <input type="radio" name="tipAmount1" value="10" >
                            10
                        </label>
                        <label class="btn btn-secondary">
                          <input type="radio" name="tipAmount2" value="25" >
                            25
                        </label>
                        <label class="btn btn-secondary">
                          <input type="radio" name="tipAmount3" value="50" >
                            50
                          </label>
                        <label class="btn btn-secondary hidden-xs">
                          <input type="radio" name="tipAmount4" value="100" >
                            100
                        </label>
                      </span>
                      <span class="input-grou-append button-group">

                        <button class="btn btn-primary" type="submit">Send Tip</button>
                        <button class="btn btn-primary collapsed" id="tip-toggle"  data-toggle="collapse"  data-target="#tip-form" type="button"><span title="Tip Options"></span></button>
                      </span>
                    </div>
                    <div class="collapse" id="tip-form" >
                      <div class="col-xs-3 col-sm-3" id="tip-value">
                        <input type="number" class="form-control"   min="1" max="10000"  value="50">
                      </div>
                      <div class="input-group col-xs-8 col-sm-9" >
                        <input type="text"  autocomplete="off" class="form-control"  placeholder="Include an optional chat note">
                          <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">Send Tip</button>
                          </span>
                      </div>
                    </div>
              {{/if}}
            </div>
            <div class="panel-body" style="padding:0px" >
              <img src="/testimg.jpg"  class="img-responsive center-block" alt="default user video" width="100%">
            </div>
          </div>
        </div>
        <!-- Chat Window -->
        <div class="col-xs-12 col-sm-4 no-padding" id="chatWindow">
          <!-- Chat Navigation Tabs -->
          <ul class="nav nav-tabs nav-pills nav-justified hidden-xs" id="chat-tabs">
            <li role="presentation" class=" tab-btn active" {{action "openChatTab"}}><a href="#chat" class="chat-tab" aria-controls="chat" role="tab" data-toggle="tab">Chat</a></li>
            <li role="presentation" class="tab-btn"{{action "openChatTab"}}><a href="#userstab" class="chat-tab"  aria-controls="userstab" role="tab" data-toggle="tab">Users</a></li>
            <li role="presentation" class="tab-btn"{{action "openChatTab"}}><a href="#settingstab" class="chat-tab"  aria-controls="settingstab" role="tab" data-toggle="tab">Settings</a></li>
          </ul>
          <!-- Chat Tab Container -->
          <div class="tab-content">
            <!-- Chat Tab Content -->
            <div role="tabpanel" class="tab-pane active" id="chat">
                 <div class="panel-body chat-body" id="chat-body">
                    <!-- User Options Menu. Collapsed by default. handlebars userID currently does nothing-->
                    <div class="collapse" id="userOptionsMenu" >
                        <div class="input-group col-xs-2" >
                            <span class="input-group-btn">
                              <button class="btn btn-primary" title="7 Day Ban" type="submit"><span class="fa fa-time">{{userID}}</span></button>
                              <button class="btn btn-primary" title="Block" type="submit"><span class="fa fa-remove-circle">{{userID}}</span></button>
                              <button class="btn btn-primary" title="Message" type="submit"><span class="fa fa-envelope">{{userID}}</span></button>
                            </span>
                        </div>
                    </div>
                    <!-- Example of a link that toggles the User Options Menu -->
                    <a class="collapsed" data-toggle="collapse" data-target="#userOptionsMenu">Toggle User Options Menu</a>

                    <!-- Chat Messages appear in this ul -->
                    <ul id="messages">
                    </ul>
                  </div>
                  <!-- Chat Input Field -->
                  <form  name="userMessage"  autocomplete="off">
                    <div class="input-group" >
                       <input  type="text"  autocomplete="off" name="usermsg"  id="usermsg" style="border-radius:0px" class="form-control" placeholder="Enter Chat Message...">
                       <span class="input-group-btn">
                         <button name="submitmsg" id="chat-input" class="btn btn-primary" {{action "sendUserMessage"}}>Send</button>
                       </span>
                    </div>
                  </form>
              </div>
              <!-- Users List Tab Content -->
              <div role="tabpanel" class="tab-pane" id="userstab">
                <div class="panel-body users-body">
                  <ul id="users"></ul>
                </div>
              </div>
              <!-- Settings Tab Content -->
              <div role="tabpanel" class="tab-pane" id="settingstab">
                <div class="panel-body settings-body">
                  Settings: <br>
                  <button class="btn btn-primary" id="slowChatButton"{{action "switchChatSpeed"}}>Enable Slow Chat</button>
                </div>
              </div>
          </div>
  </div>

