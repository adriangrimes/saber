  </ul>
  <!-- Chat Tab Container -->
  <div class="tab-content">
    <!-- Chat Tab Content -->
    <div role="tabpanel" class="tab-pane active" id="chat">
         <div class="card-body chat-body" id="chat-body">
            <!-- User Options Menu. Collapsed by default. handlebars userID currently does nothing-->
            <div class="collapse" id="userOptionsMenu" >
                <div class="input-group " >
                      <button class=" input-group-prepend btn btn-primary" title="7 Day Ban" type="submit"><span class="fa fa-time">{{userID}}</span></button>
                      <button class="input-group-prepend  btn btn-primary" title="Block" type="submit"><span class="fa fa-remove-circle">{{userID}}</span></button>
                      <button class=" input-group-prepend  btn btn-primary" title="Message" type="submit"><span class="fa fa-envelope">{{userID}}</span></button>

                </div>
            </div>
            <!-- Example of a link that toggles the User Options Menu -->
            <a class="collapsed" data-toggle="collapse" data-target="#userOptionsMenu">Toggle User Options Menu</a>

            <!-- Chat Messages appear in this ul -->
            <ul id="messages">
            </ul>
          </div>
          <!-- Chat Input Field -->
          <form  name="userMessage"  autocomplete="off">
            <div class="input-group" >
               <input  type="text"  autocomplete="off" name="usermsg"  id="usermsg" style="border-radius:0px" class="form-control" placeholder="Enter Chat Message...">
               <span class="input-group-btn">
                 <button name="submitmsg" id="chat-input" class="btn btn-primary" {{action "sendUserMessage"}}>Send</button>
               </span>
            </div>
          </form>
    </div>
      <!-- Users List Tab Content -->
    <div role="tabpanel" class="tab-pane" id="userstab">
        <div class="card-body users-body">
          <ul id="users"></ul>
        </div>
    </div>
