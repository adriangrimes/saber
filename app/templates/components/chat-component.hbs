<!-- Chat Navigation Tabs -->
<ul class="nav nav-tabs chat-tab-panel float-right">
  <li role="presentation" class="nav-item"{{action "openChatTab"}}><a href="#chat" class="chat-tab nav-link active" aria-controls="chat" role="tab" data-toggle="tab" title="Chat Window"><span class="fa fa-comments-o"></span></a></li>
  <li role="presentation" class="nav-item"{{action "openChatTab"}}><a href="#userstab" class="chat-tab nav-link"  aria-controls="userstab" role="tab" data-toggle="tab" title="Users Window"><span class="fa fa-users"></span></a></li>
  <!--  <li role="presentation" class="nav-item"{{action "openChatTab"}}><a href="#settingstab" class="chat-tab nav-link"  aria-controls="settingstab" role="tab" data-toggle="tab">Settings</a></li>-->
</ul>

<!-- Chat Tab Container -->
<div class="tab-content">
  <!-- Chat Tab Content -->
  <div role="tabpanel" class="tab-pane active" id="chat">
    <div class="card-body chat-body" id="chat-body">

      <!-- Chat User Menu. Collapsed by default.-->
      <div class="collapse" id="chatUserMenu" >
        <div class="input-group">
          <button class=" input-group-prepend btn btn-primary" title="7 Day Ban" type="submit"><span class="fa fa-time">{{chatUserMenuUserId}}</span></button>
          <button class="input-group-prepend btn btn-primary" title="Block" type="submit"><span class="fa fa-remove-circle">{{chatUserMenuUserId}}</span></button>
          <button class=" input-group-prepend btn btn-primary" title="Message" type="submit"><span class="fa fa-envelope">{{chatUserMenuUserId}}</span></button>
        </div>
      </div>

      <!-- Chat message list -->
      <ul id="messages">
        {{#each chatMessagesList as |chatMessage|}}
          {{#if chatMessage.systemMessage}}
            <li><b>{{chatMessage.message}}</b></li>
          {{else if chatMessage.userJoinMessage}}
            <li>{{chatMessage.message}}</li>
          {{else}}
            <li><b><span class="collapsed btn-dark" data-toggle="collapse" data-target="#chatUserMenu" onclick={{action "openChatUserMenu"}} data-user-id="{{chatMessage.userId}}" type="button">
                {{chatMessage.chatUserName}}:
              </span></b>
              {{chatMessage.message}}
            </li>
          {{/if}}
        {{/each}}
      </ul>

    </div> <!-- Chat body end -->

    <!-- Chat Input Field -->
    <form  name="userMessage"  autocomplete="off">
      <div class="input-group" >
         <input  type="text"  autocomplete="off" name="usermsg"  id="usermsg" style="border-radius:0px" class="form-control" placeholder="Enter Chat Message..." data-lpignore="true">
         <span class="input-group-btn">
           <button name="submitmsg" id="chat-input" class="btn btn-primary" {{action "sendUserMessage"}}>Send</button>
         </span>
      </div>
    </form>

  </div> <!-- Chat tab content end -->

  <!-- Users List Tab Content -->
  <div role="tabpanel" class="tab-pane" id="userstab">
      <div class="card-body users-body">
        <ul id="users"></ul>
      </div>
  </div>

  <!-- Settings Tab Content (slow chat, moderation, etc)
  <div role="tabpanel" class="tab-pane" id="settingstab">
      <div class="card-body users-body">
        Settings:
      </div>
    </div>
  -->
</div> <!-- Chat Tab Container end -->

{{yield}}
