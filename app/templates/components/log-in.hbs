<h4>
  {{#if signupform}}
    <b>Sign up</b>
    <small> or <a href="" {{action 'toggleSignUp'}}><u>Log in</u></a></small>
  {{else}}
    <b>Log in</b>
    <small> or <a href="" {{action 'toggleSignUp'}}><u>Sign up</u></a></small>
  {{/if}}
</h4>

<!-- Error or message display -->
{{#if currentUser.errorMessages}}
  <p class="alert alert-danger">
    {{#each currentUser.errorMessages as |error|}}
    - {{error.detail}}<br>
    {{/each}}
  </p>
{{/if}}

<form>
  {{#if signupform}}
    {{sign-up "user"}}
  {{else}}
    <div class="form-group-sm">
      <label for="username">Username / Email</label>
      {{#focus-input}}
        {{input class="form-control" id="username" spellcheck=false value=inputusername placeholder="UserTester1"}}
      {{/focus-input}}
    </div>
    <br>
    <div class="form-group-sm">
      <label for="password">Password</label>
      {{input class="form-control" id="password" spellcheck=false value=inputpassword placeholder="12345670"}}
    </div>
    <div>
      <a href="https://en.wikipedia.org/wiki/Special:Random" target="_blank">
        <u><small>Forgot your password?</small></u>
      </a>
    </div>
    <br>
    <button type="submit" class="btn btn-primary btn-block" {{action "authenticate"}}><div>Log In</div></button>
  {{/if}}
</form>
