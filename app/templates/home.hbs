<div class="container">

  <div class="row m-0">
    <div class ="col-xs-11 col-sm-6">
      <h4>Active Broadcasters</h4>
      <br>
    </div>
    <div class ="col-xs-11 col-sm-6">
      <div class="input-group">
        {{input enter=(action "search") type="text" class="form-control" placeholder="Search Broadcasters" value=searchInput}}
        <span class="input-group-append">
          <button class="btn btn-primary" type="button" {{action "search"}}>Search</button>
        </span>
      </div>
    </div>
  </div>
  <br>

  <div class="row m-0">
    {{#each model as |broadcaster|}}
          <div class="col-xs-12 col-sm-3 p-0">
            {{#link-to "p" (lower-case broadcaster.username) title=broadcaster.username}}
              <div class=" broadcaster-panel online">
                <img class="broadcaster-avatar" src="{{if broadcaster.onlineStatus broadcaster.streamnailPath "/streamnails/404_streamnail.png"}}">
                <div class="broadcaster-footer">
                  {{broadcaster.username}}
                  <br>
                  <div class="broadcaster-topic" title="{{broadcaster.channelTopic}}">
                    <small>{{broadcaster.channelTopic}}</small>
                  </div>
                </div>
              </div>
            {{/link-to}}
          </div>
    {{/each}}
