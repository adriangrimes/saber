
  <div class="row m-0">
    <div class="col-xs-12" style="padding-left:5px">
      <h2>Contact Us</h2>
    </div>
  </div>
  <div class="row m-0">
    <div class="col-xs-12 col-md-8">
      <div class="well">

        <div class="form-group">
          <label for="inputemailAddress">Email Address</label>
          <input type="email" class="form-control" id="inputemailAddress" placeholder="Email Address">
        </div>
        <div class="form-group">
          <label for="topic">Topic&nbsp;</label><br>
          <select class="form-control" id="topicSelect">
            <option value="" selected="selected">(Select a Topic)</option>
            <option>Bug Report</option>
            <option>Feature Request</option>
            <option>Sign up Help</option>
            <option>Billing Help</option>
            <option>Other</option>
          </select>
        </div>
        <div class="form-group">
          <label for="inputSubject">Subject</label>
          <input type="text" class="form-control" id="inputSubject"placeholder="Subject">
        </div>
        <div class="form-group">
          <label for="comment">Message</label>
          <textarea class="form-control" rows="5" id="message"placeholder="Message"></textarea>
        </div>
        <br>
        <button type="submit" class="btn btn-primary btn-block">Send Message</button>
        <br><br>
      </div>
    </div>
    <div class="col-xs-12 col-md-4">
      <a class="btn btn-primary btn-block" href="/help" role="button">Search Help Pages</a>
    </div>

  </div>


