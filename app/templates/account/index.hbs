<div class="row m-0 mb-3">
    <h2>Account Settings</h2>
</div>
<div class="row m-0">
    <div class="col-xs-12 col-sm-8 ">
      {{#if loginState.devCaster}}
      <a class="btn btn-primary btn-block d-block d-sm-none" href="/account/dashboard" role="button">View Dashboard &nbsp;<span class="fa fa-dashboard" aria-hidden="true"></span></a>
      {{/if}}
      <a class="btn btn-primary btn-block d-block d-sm-none mb-3" href="/profile" role="button">Edit Profile &nbsp;<span class="fa fa-edit" aria-hidden="true"></span></a>
          {{#if loginState.devCaster}}
              <div  class="card mb-3" id="payoutSettingsAccordion">
                  <div class="card-heading accordion-toggle collapsed" data-toggle="collapse" data-parent="#payoutSettingsAccordion" data-target="#collapsePayoutSettings">
                    <h3 class="card-title">Payout Settings</h3>
                  </div>
                  <div id="collapsePayoutSettings" class="card-collapse collapse">
                    <div class="card-body">
                            <h4> Select Payout Method:</h4>
                      <div id="payoutSelect" class="btn-group" data-toggle="buttons">

                        <label id="payoutMethod" class="btn active">
                          <input type="radio" name="payoutSettings" id="mailedcheck" chacked>
                          Mailed Check
                        </label>

                        <label id="payoutMethod"  class="btn ">
                          <input type="radio" name="payoutSettings" id="bitcoin">
                          Bitcoin
                        </label>
                      </div>
                      <div class="form-group">
                        <label for="inputbitcoinaddress">Bitcoin Address</label>
                        <input type="text" class="form-control" id="inputbitcoinaddress" placeholder="Your Bitcoin Address">
                      </div>
                        {{address-select}}
                        <div class=text-right>
                        <button type="submit" class="btn btn-primary">Save</button>
                      </div>
                    </div>
                  </div>
              </div>
          {{/if}}

          <div  class="card mb-3"   id="emailSettingsAccordion">
              <div class="card-heading accordion-toggle " data-toggle="collapse" data-parent="#emailSettingsAccordion" data-target="#collapseEmailSettings">
                   <h3 class="card-title">Email Settings</h3>
              </div>
          <div id="collapseEmailSettings" class="card-collapse show">
            <div class="card-body">
                <h4>Send me an email...</h4>
                <form {{action "submitEmailSettings" on="submit"}}>

                <div class="form-check">
                  <label class="form-check-label">
                    <!-- <input type="checkbox" class="form-check-input" checked={{value}} onchange={{action "settingChanged" value="target.value"}}> -->
                    <!-- <input type="checkbox" class="form-check-input" checked={{sendEmailFavoritesOnlineCB}}> -->
                    {{input type="checkbox" class="form-check-input" name="sendEmailFavoritesOnline" checked=sendEmailFavoritesOnline}}
                      When my favorites are online.
                  </label>
                </div>
                <div class="form-check">
                  <label class="form-check-label">
                    <input type="checkbox" class="form-check-input">
                      When I get a new private message
                  </label>
              </div>
              <div class="form-check">
                <label class="form-check-label">
                  <!-- <input type="checkbox" class="form-check-input" checked> -->
                  {{input type="checkbox" class="form-check-input" name="sendEmailSiteNews" checked=sendEmailSiteNews}}
                    With the monthly site newsletter
                  </label>
            </div>

            <div class=text-right>
                <button type="submit" name="settingsubmit" class="btn btn-primary">Save</button>
              </div>

              </form>
              </div>
          </div>
        </div>

        <div  class="card mb-3" id="siteSettingsAccordion">
            <div class="card-heading accordion-toggle collapsed" data-toggle="collapse" data-parent="#siteSettingsAccordion" data-target="#collapseSiteSettings">
              <h3 class="card-title"> Site and Search Settings</h3>
        </div>
        <div id="collapseSiteSettings" class="card-collapse collapse">
          <div class="card-body">
            <h4> Default Search Settings:</h4>
                Show:
                <form {{action "submitDisplaySettings" on="submit"}}>
                  <div class="radio">
                    <label>
                      <input type="radio" name="default-search-options" id="default-all" value="default-all" checked>
                    <b>  All broadcasters</b>
                    </label>
                  </div>
                  <div class="radio">
                    <label>
                      <input type="radio" name="default-search-options" id="default-female" value="default-female" >
                  <b>    Female broadcasters only</b>
                    </label>
                  </div>
                  <div class="radio">
                    <label>
                      <input type="radio" name="default-search-options" id="default-male" value="default-male" >
                    <b>  Male broadcasters only</b>
                    </label>
                  </div>
                      <hr class="splash-horizontal-rule">
                <h4> Site Graphics Style:</h4>

                <div class="form-check">
                  <label class="form-check-label">
                    <!-- <input type="checkbox" class="form-check-input" checked> -->
                    {{input type="checkbox" class="form-check-input" name="darkMode" checked=darkMode}}
                      Dark mode
                    </label>
              </div>

                    <div class=text-right>
                    <button type="submit" name="settingsubmit" class="btn btn-primary">Save</button>
                  </div>
              </form>
                </div>
            </div>
          </div>


              <div  class="card mb-3"  id="securitySettingsAccordion">

                  <div class="card-heading accordion-toggle collapsed" data-toggle="collapse" data-parent="#securitySettingsAccordion" data-target="#collapseSecuritySettings">
                    <h3 class="card-title">Change Email or Password</h3>

                  </div>
                  <div id="collapseSecuritySettings" class="card-collapse collapse">
                    <div class="card-body">

                        <form>
                          <div class="form-group">
                            <label for="inputemailAddress">New Email address</label>
                            <input type="email" class="form-control" id="inputnewemailAddress"  placeholder="New email address">
                          </div>
                          <div class="form-group">
                            <label for="inputnewemailAddressConfirm">Confirm New Email address</label>
                            <input type="email" class="form-control" id="inputnewemailAddressConfirm"  placeholder="New email address">
                          </div>
                            <hr class="splash-horizontal-rule">
                          <div class="form-group">
                            <label for="inputpassword">New Password</label>
                            <input type="password" class="form-control" id="inputpasswordnew" placeholder="New Password">
                          </div>
                          <div class="form-group">
                            <label for="inputpasswordconfirm">Confrim New Password</label>
                            <input type="password" class="form-control" id="inputpasswordconfirm" placeholder="New Password">
                          </div>
                                <hr class="splash-horizontal-rule">
                          <div class="form-group">
                            <label for="inputpassword">Current Password</label>
                            <input type="password" class="form-control" id="inputpassword" placeholder="Current Password">
                          </div>

                          <div class=text-right>
                          <button type="" class="btn btn-primary">Save</button>
                        </div>
                      </form>
                      </div>
                  </div>
                </div>



          </div>

            <div class="col-xs-12 col-sm-4">
              {{#if loginState.devCaster}}
              <a class="btn btn-primary btn-block d-none d-sm-block" href="/account/dashboard" role="button">View Dashboard &nbsp;<span class="fa fa-dashboard" aria-hidden="true"></span></a>
              {{/if}}
                  <a class="btn btn-primary btn-block d-none d-sm-block mt-5" href="/profile" role="button">Edit Profile &nbsp;<span class="fa fa-edit" aria-hidden="true"></span></a>

                {{#if loginState.broadcaster}}
                {{else}}
                <a class="btn btn-primary btn-block d-none d-sm-block" href="/fullSignup" role="button">Become a Broadcaster &nbsp;<span class="fa fa-video-camera" aria-hidden="true"></span></a>
                {{/if}}
                {{#if loginState.developer}}
                {{else}}
                <a class="btn btn-primary btn-block d-none d-sm-block" href="/fullSignup" role="button">Become a Developer &nbsp;<span class="fa fa-file-code-o" aria-hidden="true"></span></a>
                {{/if}}
                <a class="btn btn-outline-dark btn-block mt-5" href="/account/delete"><u>Delete Account</u></a>

                {{#if loginState.broadcaster}}
                {{else}}
                <a class="btn btn-primary btn-block d-block d-sm-none" href="/fullSignup" role="button">Become a Broadcaster &nbsp;<span class="fa fa-video-camera" aria-hidden="true"></span></a>
                {{/if}}
                {{#if loginState.developer}}
                {{else}}
                <a class="btn btn-primary btn-block d-block d-sm-none" href="/fullSignup" role="button">Become a Developer &nbsp;<span class="fa fa-file-code-o" aria-hidden="true"></span></a>
                {{/if}}
              </div>

</div>


{{outlet}}
