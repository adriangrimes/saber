<h4>
  {{#if signupform}}
    <b>Sign up</b>
    <small> or <a href="" {{action 'toggleSignUp'}}><u>Log in</u></a></small>
  {{else}}
    <b>Log in</b>
    <small> or <a href="" {{action 'toggleSignUp'}}><u>Sign up</u></a></small>
  {{/if}}
</h4>

{{error-display}}

<form {{action "authenticate" on="submit"}}>
  {{#if signupform}}
    {{sign-up "user"}}
  {{else}}
    <div class="form-group-sm">
      <label for="username">Username / Email</label>
      {{#focus-input}}
        {{input type="text" class="form-control" id="username" spellcheck=false value=inputusername placeholder="username / email" autocomplete="username"}}
      {{/focus-input}}
    </div>
    <br>
    <div class="form-group-sm">
      <label for="password">Password</label>
      {{input type="password" class="form-control" id="password" spellcheck=false value=inputpassword placeholder="password" autocomplete="password"}}
    </div>
    <div>
      {{#link-to "forgot-password"}}
        <u><small {{action "closeModal"}}>Forgot your password?</small></u>
      {{/link-to}}
    </div>
    <br>
    <button type="submit" class="btn btn-primary btn-block"><div>Log In</div></button>
  {{/if}}
</form>
