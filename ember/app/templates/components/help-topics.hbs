<div class="row m-0">
  <div class="col-2 pb-2 pt-1">
    <h2>Help
      {{#if (or this.isContracted this.helpForTitle)}}
        for
      {{/if}}
    </h2>
  </div>
  {{#if this.helpForTitle}}
    <div class="col-3 p-0">
      {{#if (eq this.helpForTitle 'contractors')}}
        <div>Affiliates<span class="fa fa-bullhorn pl-2"></span></div>
      {{/if}}
      {{#if (eq this.helpForTitle 'broadcasters')}}
        <div>Broadcasters<span class="fa fa-video-camera pl-2"></span></div>
      {{/if}}
      {{#if (eq this.helpForTitle 'developers')}}
        <div>Developers<span class="fa fa-file-code-o pl-2"></span></div>
      {{/if}}
    </div>
  {{else}}
    <div class="col-3 p-0">
      {{#if currentUser.user.affiliate}}
        <div>Affiliates<span class="fa fa-bullhorn pl-2"></span></div>
      {{/if}}
      {{#if currentUser.user.broadcaster}}
        <div>Broadcasters<span class="fa fa-video-camera pl-2"></span></div>
      {{/if}}
      {{#if currentUser.user.developer}}
        <div>Developers<span class="fa fa-file-code-o pl-2"></span></div>
      {{/if}}
    </div>
  {{/if}}
</div>
<div class="row m-0">

  <div class="col-xs-12 col-md-4 p-0 px-4">
    <div class="sticky-top sticky-menu z-900 pt-3">
      {{#each applicableHelpTopics as |helpTopic|}}
        <LinkTo @route="help" @query={{hash show=helpTopic.shortTitle}} class="btn btn-block btn-primary mb-2">
          {{helpTopic.title}}
        </LinkTo>
      {{/each}}
      <div class="text-center pt-5 mt-5 d-block ">
        Still need help?<br>Click below to send us a message.<br>
        <LinkTo @route="contact" class="btn btn-primary mt-3">
          Contact Us
        </LinkTo>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-md-8 p-0 px-1 py-3">
    {{#each applicableHelpTopics as |helpTopic|}}
      <div id="{{helpTopic.shortTitle}}">
        <div class="card mb-3">
          <div class="card-heading">
            <h4 class="card-title ">{{helpTopic.title}}</h4>
          </div>
          <div class="card">
            <div class="card-body">
              {{#each helpTopic.helpSections as |helpSection|}}
                <h5>{{helpSection.section_title}}</h5>
                <div class="pb-4">
                  {{{helpSection.section_body}}}
                </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

</div>
