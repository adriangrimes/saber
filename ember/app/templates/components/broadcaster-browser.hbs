{{! Header}}
<div class="row m-0">
  <div class="col-xs-11 col-sm-6">
    <h4 {{action "reloadBrowsePageTest"}}>Broadcasters</h4>
  </div>
  <div class="col-xs-11 col-sm-6">
    <div class="input-group">
      {{input enter=(action "search") type="text" class="form-control" placeholder=searchPlaceholder value=searchInput}}
      <span class="input-group-append">
        <button class="btn btn-primary fa fa-search" type="button" {{action "search"}}></button>
      </span>
    </div>
  </div>
</div>
<br>

{{! Broadcaster display}}
<div class="row m-0">

  {{#each model as |broadcaster|}}
    <div class="col-xs-12 col-sm-3 p-0">
      {{#link-to "p" (lower-case broadcaster.username) title=broadcaster.username}}
        <div class="broadcaster-panel {{if broadcaster.onlineStatus "online" "offline"}}">
          <img class="broadcaster-avatar" src="{{if broadcaster.profilePhotoPath broadcaster.profilePhotoPath "/streamnails/usericon.svg"}}">
          <div class="broadcaster-footer text-light">
            <div>{{broadcaster.username}}</div>
            {{#if broadcaster.onlineStatus}}
              <br>
              <div class="broadcaster-topic" title="{{broadcaster.channelTopic}}">
                <small>{{broadcaster.channelTopic}}</small>
              </div>
            {{/if}}

          </div>
        </div>
      {{/link-to}}
    </div>
  {{else}}
    No results
  {{/each}}

</div>
